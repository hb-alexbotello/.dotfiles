parse_git_branch() {
  git branch 2>/dev/null | grep '\*' | sed 's/* //'
}

git_status() {
  local status
  status=$(git status --porcelain 2>/dev/null | wc -l | tr -d ' ')
  if [ "$status" -gt 0 ]; then
    echo "Â±$status"
  fi
}

